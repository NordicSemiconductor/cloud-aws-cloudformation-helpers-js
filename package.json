{
  "name": "@nordicsemiconductor/cloudformation-helpers",
  "version": "0.0.0-development",
  "description": "Helper functions which simplify working with AWS CloudFormation stacks",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "node": "./dist/index.js"
    }
  },
  "type": "module",
  "scripts": {
    "test": "tsx --no-warnings --test ./src/*.spec.ts",
    "prepare": "husky install",
    "prepublishOnly": "npx tsc --noEmit false --outDir ./dist -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NordicSemiconductor/cloud-aws-cloudformation-helpers-js.git"
  },
  "bugs": {
    "url": "https://github.com/NordicSemiconductor/cloud-aws-cloudformation-helpers-js/issues"
  },
  "homepage": "https://github.com/NordicSemiconductor/cloud-aws-cloudformation-helpers-js",
  "keywords": [
    "nrf-asset-tracker",
    "iot"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "peerDependencies": {
    "@aws-sdk/client-cloudformation": ">= 3 < 4"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "18.4.4",
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "13.1.8",
    "@nordicsemiconductor/eslint-config-asset-tracker-cloud-typescript": "17.0.0",
    "@types/aws-lambda": "8.10.131",
    "@types/node": "20.11.1",
    "@typescript-eslint/eslint-plugin": "6.18.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-unicorn": "50.0.1",
    "nock": "13.5.0",
    "tsx": "4.7.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ],
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20",
    "npm": ">=9"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failTitle": false
        }
      ]
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "package-lock.json",
    "dist",
    "LICENSE",
    "README.md"
  ],
  "prettier": "@nordicsemiconductor/asset-tracker-cloud-code-style/.prettierrc"
}
